<table class="table table-striped table-bordered dTableR">
  <thead>
    <tr>
      <th>Formação</th>
      <th>Curso</th>
      <th>Instituição</th>
      <th>Periodo</th>
      <th></th>      
    </tr>
  </thead>
  <tbody>
    <% candidato_formacaos.each do |c| %>
    <tr>
      <td width='150'><%= c.formacao.descricao unless c.formacao_id.nil? %></td>
      <td width='200'><%= c.curso.nome unless c.curso_id.nil? %></td>
      <td width='150'><%= c.instituicao %></td>
      <td width='65'><%= c.inicio_mes %>/<%= c.inicio_ano %>-<%= c.final_mes %>/<%= c.final_ano %></td>
      <td width="70">
        <%= link_to 'Editar', edit_candidato_formacao_path(c) %> |
        <%= link_to 'Remover', c, method: :delete, data: { confirm: 'Deseja realmente remover o registro?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
