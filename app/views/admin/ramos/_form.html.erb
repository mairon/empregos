<%= form_for [:admin, @ramo] do |f| %>
  <% if @ramo.errors.any? %>
    <div class="alert alert-error">
      <a class="close" data-dismiss="alert">×</a>
      <h2><%= pluralize(@ramo.errors.count, "erros") %> encontrados:</h2>

      <ul>
      <% @ramo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row-fluid">
    <div class="chat_box">
      <div class="row-fluid">
        <div class="well chat_content">
            <table>

              <tr>
                <td align="right">Nome:</td>
                <td><%= f.text_field :nome, :placeholder => 'Máximo 50 Caracteres', :maxlength => 50 %><span class="f_req">*</span></td>
              </tr>


              <tr>
                <td align="right">Status:</td>
                <td><%= f.check_box :status, checked: true %>Ativo</td>
              </tr>

              <tr>
                <td></td>
                <td>
                  <%= f.submit :value => " Salvar ", :disable_with => "Aguarde...", :class => "btn" %>
                  <%= link_to 'Voltar', admin_ramos_path, :class => "btn" %>
                </td>
              </tr>
            </table>

        </div>
      </div>
    </div>
</div>
<% end %>

